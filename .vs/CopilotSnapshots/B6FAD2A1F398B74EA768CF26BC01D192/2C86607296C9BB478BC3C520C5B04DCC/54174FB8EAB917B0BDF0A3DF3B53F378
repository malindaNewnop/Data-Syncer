using System;

namespace syncer.ui
{
    /// <summary>
    /// Provides extension methods for String operations
    /// </summary>
    public static class StringExtensions
    {
        /// <summary>
        /// Indicates whether a specified string is null, empty, or consists only of white-space characters.
        /// Implementation for .NET 3.5 which doesn't have this method natively.
        /// </summary>
        /// <param name="value">The string to test.</param>
        /// <returns>true if the string is null, empty, or consists only of white-space characters; otherwise, false.</returns>
        public static bool IsNullOrWhiteSpace(this string value)
        {
            if (value == null || value.Length == 0)
                return true;

            for (int i = 0; i < value.Length; i++)
            {
                if (!char.IsWhiteSpace(value[i]))
                    return false;
            }

            return true;
        }
    }
}
