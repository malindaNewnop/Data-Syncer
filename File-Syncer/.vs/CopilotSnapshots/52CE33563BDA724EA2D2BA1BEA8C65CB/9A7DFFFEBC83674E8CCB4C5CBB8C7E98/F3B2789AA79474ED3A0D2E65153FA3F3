using System;

namespace Syncer.Core.Models
{
    /// <summary>
    /// Enumeration defining supported transfer protocols
    /// </summary>
    public enum TransferProtocol
    {
        FTP,
        SFTP,
        Local
    }

    /// <summary>
    /// Enumeration defining transfer directions
    /// </summary>
    public enum TransferDirection
    {
        Upload,
        Download,
        Bidirectional
    }

    /// <summary>
    /// Enumeration defining job status
    /// </summary>
    public enum JobStatus
    {
        Stopped,
        Running,
        Paused,
        Error,
        Completed
    }

    /// <summary>
    /// Enumeration defining log levels
    /// </summary>
    public enum LogLevel
    {
        Info,
        Warning,
        Error,
        Success
    }
}
